<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Palladium.Controls">
    
    <!-- This file loads all of the styles of Palladium.Controls, and applies additional styling (such as global font family). -->
    <StyleInclude Source="avares://Palladium.Controls/IconButton.axaml"/>
    <StyleInclude Source="avares://Palladium.Controls/SearchBar.axaml"/>
    
    <!-- Font -->
    <Styles.Resources>
        <FontFamily x:Key="InterFont">avares://Palladium.Controls/Resources/Fonts#Inter</FontFamily>
    </Styles.Resources>
    <Style Selector="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFont}" />
    </Style>

    <!-- Preview -->
    <Design.PreviewWith>
        <Border Padding="20">
            <controls:IconButton IconData="{StaticResource SettingsIcon}" Text="Settings" />
        </Border>
    </Design.PreviewWith>
</Styles>
