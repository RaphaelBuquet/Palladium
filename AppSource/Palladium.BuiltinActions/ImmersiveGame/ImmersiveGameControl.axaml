<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:immersiveGame="clr-namespace:Palladium.BuiltinActions.ImmersiveGame"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Palladium.BuiltinActions.ImmersiveGame.ImmersiveGameControl">

    <Design.DataContext>
        <immersiveGame:ImmersiveGameViewModel />
    </Design.DataContext>
    <StackPanel Orientation="Vertical" Margin="14 40" Spacing="14">
        <StackPanel Orientation="Horizontal" Spacing="4">
            <Button Command="{Binding ActivateCommand}">Enable</Button>
            <Button Command="{Binding DeactivateCommand}">Disable</Button>
        </StackPanel>
        <TextBlock Text="{Binding AvailableDisplays}" />
    </StackPanel>
</UserControl>