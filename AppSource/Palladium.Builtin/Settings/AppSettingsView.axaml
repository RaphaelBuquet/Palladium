<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:Palladium.Builtin.Settings"
             xmlns:controls="clr-namespace:Palladium.Controls;assembly=Palladium.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Palladium.Builtin.Settings.AppSettingsView">
    <Design.DataContext>
        <settings:AppSettingsViewModel />
    </Design.DataContext>
    <StackPanel Orientation="Vertical" Margin="0, 0, 2, 0" Spacing="6">
        <StackPanel Orientation="Horizontal" Spacing="6">
            <CheckBox Name="LaunchAtStartup" VerticalAlignment="Center" IsChecked="{Binding LaunchAtStartup}"
                      IsEnabled="{Binding !LaunchAtStartupIsChanging}" />
            <TextBlock VerticalAlignment="Center" Text="Launch at Startup" />
            <controls:ActivityIndicator IsVisible="{Binding LaunchAtStartupIsChanging}"/>
            <controls:ValidationMessage
                Errors="{Binding Path=(DataValidationErrors.Errors), ElementName=LaunchAtStartup}" />
        </StackPanel>
    </StackPanel>
</UserControl>