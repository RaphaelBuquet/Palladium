<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <EnableDynamicLoading>true</EnableDynamicLoading>
    </PropertyGroup>
    <ItemGroup>
        <Reference Include="Palladium.Extensions">
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
            <HintPath>..\..\Palladium\Palladium.Extensions.dll</HintPath>
        </Reference>
        <Reference Include="Palladium.Actions">
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
            <HintPath>..\..\Palladium\Palladium.Actions.dll</HintPath>
        </Reference>
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="Avalonia" Version="11.0.3">
          <ExcludeAssets>runtime</ExcludeAssets>
      </PackageReference>
      <PackageReference Include="DynamicData" Version="7.14.2">
          <ExcludeAssets>runtime</ExcludeAssets>
      </PackageReference>
      <PackageReference Include="ReactiveUI" Version="19.4.1">
          <ExcludeAssets>runtime</ExcludeAssets>
      </PackageReference>
      <PackageReference Include="System.Reactive" Version="6.0.0">
          <ExcludeAssets>runtime</ExcludeAssets>
      </PackageReference>
    </ItemGroup>
</Project>
